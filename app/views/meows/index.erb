<h2>What are your feline friends up to?</h2>

<% if current_user %>
Welcome <%= current_user.username %>
<% end %>

<ul id='meows'>
<% @meows.each do |meow| %>
    <li>
        <span class="message"><%= meow.message %></span>
        <span class="time"><%= meow.time %></span>
        <span class="username"><%= meow.user.username %></span>
        <span class="name"><%= meow.user.name %></span>
    </li>
  <% end %>
</ul>

<a class="head" href="/meows/new">Meow</a>
